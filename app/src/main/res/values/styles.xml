<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/gameBackLight</item>
        <item name="android:navigationBarColor">@color/gameBackLight</item>

    </style>

    <style name="NOPDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowAnimationStyle">@style/NOPDialogAnim</item>
    </style>

    <style name="NOPDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_right</item>
    </style>

    <style name="SettingsDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowAnimationStyle">@style/SettingsDialogAnim</item>
    </style>

    <style name="SettingsDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_left</item>
    </style>

    <style name="QuitDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowAnimationStyle">@style/QuitDialogAnim</item>
    </style>

    <style name="QuitDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_top</item>
    </style>

</resources>
      